<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="16dp"
            android:text="3"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/equalButton" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="343dp"
            android:layout_height="116dp"
            android:layout_marginTop="28dp"
            android:inputType="none"
            android:hint="@string/outputView"
            android:gravity="end"
            android:ems="10"
            android:textSize="80dp"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.681"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <Button
            android:id="@+id/clearButton"
            android:layout_width="238dp"
            android:layout_height="63dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:text="Clear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <Button
            android:id="@+id/equalButton"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="="
            app:layout_constraintStart_toEndOf="@+id/clearButton"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <Button
            android:id="@+id/button1"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clearButton" />

        <Button
            android:id="@+id/button2"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="2"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/clearButton" />

        <Button
            android:id="@+id/button4"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="5"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/button8"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="8"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <Button
            android:id="@+id/button0"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/dotButton"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

        <Button
            android:id="@+id/button6"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="6"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button9"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="9"
            app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

        <Button
            android:id="@+id/button7"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/dotButton"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="156dp"
            android:layout_height="66dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="+"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dotButton" />

        <Button
            android:id="@+id/subtractButton"
            android:layout_width="156dp"
            android:layout_height="66dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="-"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addButton" />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="156dp"
            android:layout_height="66dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="95dp"
            android:text="*"
            app:layout_constraintStart_toEndOf="@+id/addButton"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="156dp"
            android:layout_height="66dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="12dp"
            android:text="/"
            app:layout_constraintStart_toEndOf="@+id/subtractButton"
            app:layout_constraintTop_toBottomOf="@+id/multiplyButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
